<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://jakarta.ee/xml/ns/jakartaee"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
    id="WebApp_ID" version="6.0">
    <display-name>SRECMunicipalComplaintSystem</display-name>
    
    <!-- Welcome file list -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    <!-- Complaint Servlet Mapping -->
    <servlet>
        <servlet-name>ComplaintServlet</servlet-name>
        <servlet-class>com.srec.complaint.ComplaintServlet</servlet-class>
        <!-- Multipart config for file uploads -->
         <multipart-config>
            <max-file-size>10485760</max-file-size> <!-- 10MB -->
            <max-request-size>20971520</max-request-size> <!-- 20MB -->
            <file-size-threshold>0</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>ComplaintServlet</servlet-name>
        <url-pattern>/complaint</url-pattern>
    </servlet-mapping>
    
    <!-- Admin Servlet Mapping -->
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.srec.complaint.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

</web-app>
